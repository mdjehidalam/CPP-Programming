#include<iostream>
using namespace std;
int main()
{
	int a[2][2]={{1,2},{3,4}};
	cout<<"The Principle Digonal Elements are : "<<flush;
	for(int i=0; i<2; i++)
	 {
	 	for(int j=0; j<2; j++)
		{
	 		if(i==j)
	 		{
				cout<<a[i][j]<<" ";
	 		}
		}
	}
	int n=1;
	cout<<"the secondary Digonal Elements are : "<<flush;
	for(int i=0; i<2; i++)
	{
		for(int j=0; j<2; j++)
		{
			if(n-i==j)
			{
				cout<<a[i][j]<<" ";
			}
		}
	}
	 
}
